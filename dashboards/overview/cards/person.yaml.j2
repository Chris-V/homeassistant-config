type: picture-elements
image: "{{ image }}"
style: |
  .element[class~=element] {
    position: relative;
    transform: none;
  }
elements:
  - type: custom:container-element
    style:
      position: absolute
      top: 0
      right: 0
      left: 0
      bottom: 0
      display: flex
      flex-direction: column-reverse
      "--ha-card-background": none
      "--ha-card-box-shadow": none
      "--paper-item-icon-color": "#DADADB"
      "--secondary-text-color": "#DADADB"
      "--primary-text-color": "#DADADB"
      "--mdc-icon-size": 40px
    elements:
      - type: custom:container-element
        style:
          height: 40px
          overflow: hidden
          display: flex
          flex-grow: 0
          flex-shrink: 0
          align-items: center
          justify-content: space-between
          padding: 0 5px
          background-color: rgba(0, 0, 0, 0.45)
          color: "#D3D3D3"
        elements:
          - type: custom:container-element  # Battery
            style:
              height: 100%
              margin-left: 5px
              display: flex
              flex-direction: column
              align-items: center
              justify-content: center
            elements:
              - type: state-icon
                entity: "{{ battery_entity }}"
                title:
                style:
                  margin: -16px -12px -12px -12px
                  "--mdc-icon-size": 16px
              - type: state-label
                entity: "{{ battery_entity }}"
                title:
                style:
                  margin: 2px -8px -8px -8px
                  line-height: 0
                  font-size: 0.9rem

          - type: state-label
            entity: "{{ person_entity }}"
            style:
              text-transform: uppercase

          - type: custom:hui-element
            card_type: markdown
            entity_id: "{{ person_entity }}"
            content: "{{ "{{" }} relative_time(states['{{ person_entity }}'].last_changed) {{ "}}" }}"
            theme: blank
            style: |
              ha-markdown.markdown.no-header {
                padding: 0;
                font-size: 0.9rem;
                color: #D3D3D3;
              }
