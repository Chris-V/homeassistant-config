type: picture-elements
image_entity: "{{ person_entity }}"
card_mod:
  style: |
    .element[class~=element] {
      position: relative;
      transform: none;
    }
elements:
  - type: custom:container-element
    style:
      position: absolute
      top: 0
      right: 0
      left: 0
      bottom: 0
      display: flex
      flex-direction: column-reverse
      "--ha-card-background": none
      "--ha-card-box-shadow": none
      "--paper-item-icon-color": "#DADADB"
      "--secondary-text-color": "#DADADB"
      "--primary-text-color": "#DADADB"
      "--mdc-icon-size": 24px
    elements:
      - type: custom:container-element
        style:
          overflow: hidden
          display: flex
          flex-grow: 0
          flex-shrink: 0
          align-items: center
          background-color: rgba(0, 0, 0, 0.45)
          color: "#D3D3D3"
        elements:
          - type: state-icon
            entity: "{{ battery_entity }}"
            title:
            style:
              margin: "calc(-1 * (40px - var(--mdc-icon-size)) / 2)"
          - type: state-icon
            entity: "{{ bed_entity }}"
            title:
            style:
              margin: "calc(-1 * (40px - var(--mdc-icon-size)) / 2)"

          - type: state-label
            entity: "{{ person_entity }}"
            style:
              text-transform: uppercase
              margin-left: auto
