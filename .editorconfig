root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 79

[*.yaml]
indent_size = 2
max_line_length = off

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[zwcfg_*.xml]
indent_style = tab
max_line_length = off
